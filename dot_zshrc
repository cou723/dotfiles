is_wsl=0
if grep -qi microsoft /proc/version 2>/dev/null; then
  is_wsl=1
fi

if [ "$is_wsl" = "1" ]; then
    echo "WSL Detected"
    export SSH_AUTH_SOCK=$HOME/.ssh/agent.sock

    # ソケットがまだ作られていなければ、socat+npiperelayでブリッジ起動
    if ! ss -a | grep -q "$SSH_AUTH_SOCK"; then
    rm -f "$SSH_AUTH_SOCK"
    ( setsid socat UNIX-LISTEN:$SSH_AUTH_SOCK,fork EXEC:"/mnt/c/Users/coura/AppData/Local/Microsoft/WinGet/Links/npiperelay.exe -ei -s //./pipe/openssh-ssh-agent",nofork & ) >/dev/null 2>&1
    fi
else
    echo "Non WSL Loaded"
    export SSH_AUTH_SOCK="$HOME/.1password/agent.sock"
fi


