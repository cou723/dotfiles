{
  "permissions": {
    "allow": [
      "Bash(ls *)",
      "Bash(find *)",
      "Bash(grep *)",
      "Bash(rg *)",
      "Bash(git add *)",
      "Bash(pnpm run build)",
      "Bash(pnpm test)",
      "Bash(pnpm run lint)",
      "Bash(pnpm lint)",
      "Bash(pnpm run format)",
      "Bash(pnpm format)",
      "Bash(pnpm run type-check)",
      "Bash(pnpm type-check)",
      "Bash(pnpm run typecheck)",
      "Bash(pnpm install:*)",
      "Bash(pnpm remove:*)",
      "Bash(pnpm add:*)",
      "Bash(tsc --noEmit)",
      "Bash(uv run *)",
      "Bash(make lint)",
      "Bash(make format)",
      "Bash(make typecheck)",
      "Bash(moon run *)"
    ]
  },
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "TodoWrite",
        "hooks": {
          "type": "command",
          "command": "echo 'TodoWriteツールは非推奨です。代わりにtask_manager MCPツールを使用してください。' && exit 1"
        }
      }
    ]
  }
}